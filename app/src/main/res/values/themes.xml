<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Minima" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="pinContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnCount">3</item>
    </style>

    <style name="pinNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" tools:ignore="SpUsage">23dp</item>
        <item name="android:onClick">insertNumber</item>
        <item name="android:background">@drawable/pin_num_bg</item>
    </style>

    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/gray</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="fontCrimsonText">
        <item name="android:fontFamily">@font/crimson_text</item>
        <item name="fontFamily">@font/crimson_text</item>
    </style>

    <style name="fontIndieFlower">
        <item name="android:fontFamily">@font/indie_flower</item>
        <item name="fontFamily">@font/indie_flower</item>
    </style>

    <style name="fontJosefinSans">
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="fontFamily">@font/josefin_sans</item>
    </style>

    <style name="fontLato">
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="fontNunito">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="fontOpenSans">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="fontRoboto">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="fontUbuntu">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <style name="Theme.Minima.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Minima.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Minima.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>